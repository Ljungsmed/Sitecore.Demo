@using Sitecore.Foundation.Assets
@using Sitecore.Foundation.Assets.Models
@using Sitecore.Foundation.SitecoreExtensions.Repositories
@using Sitecore.Mvc.Analytics.Extensions
@inherits WebViewPage
@{
  Layout = null;
}
<!DOCTYPE html>
<!--[if IE 9]><html lang="en" class="ie9 no-js"><![endif]-->
<!--[if !IE]><!-->
<html lang="@Sitecore.Context.Language.CultureInfo.TwoLetterISOLanguageName">
<!--<![endif]-->
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta http-equiv="Content-type" content="text/html; charset=utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  @if (!Sitecore.Context.PageMode.IsExperienceEditor)
  {
    @Html.Sitecore().Placeholder("head")
  }
  <!-- Latest compiled and minified JavaScript -->
  @RenderAssetsService.Current.RenderScript(ScriptLocation.Head)
  @RenderAssetsService.Current.RenderStyles()
  @Html.Sitecore().VisitorIdentification()
</head>
<body class="@(Sitecore.Context.PageMode.IsExperienceEditor ? "header-static" : "") @(Sitecore.Context.PageMode.IsNormal ? "" : (Sitecore.Context.PageMode.IsExperienceEditor ? "pagemode-edit" : "pagemode-preview"))">
  <div id="main-container">
    <header class="@(Sitecore.Context.PageMode.IsExperienceEditor ? "header-static" : "header-fixed") bg-white">
      @Html.Sitecore().Placeholder("header-top")

      @Html.Sitecore().Placeholder("navbar")
    </header>
    <main role="main">
      @Html.Sitecore().Placeholder("page-layout")
    </main>
    <footer>
      @Html.Sitecore().Placeholder("footer")
    </footer>

    @if (!Sitecore.Context.PageMode.IsExperienceEditor)
    {
      <div class="off-canvas-sidebar off-canvas-sidebar-right">
        <div class="btn-group-vertical hover" role="group">
          <button type="button" class="btn btn-info sidebar-closed" data-toggle="sidebar" title="@DictionaryRepository.Get("/Legal/Captions/OpenVisitDetailsPanel", "Open visit details panel")" data-side="right">
            <span class="glyphicon glyphicon-info-sign icon-md "></span>
          </button>
          <button type="button" class="btn btn-info btn-lg sidebar-opened" style="display: none" data-toggle="sidebar" title="@DictionaryRepository.Get("/Website/Captions/CloseVisitDetailsPanel", "Close visit details panel")" data-side="right">
            <span class="glyphicon glyphicon-remove"></span>
            <span class="hover-only">Close</span>
          </button>
          <button href="#" onclick="jQuery('head').trigger('visit-info:refresh')" style="display: none" class="btn btn-success sidebar-opened" title="@DictionaryRepository.Get("/Website/Captions/RefreshVisitDetailsPanel", "Refresh visit details panel")">
            <span class="glyphicon glyphicon-refresh"></span>
            <span class="hover-only">Refresh</span>
          </button>
          <a href="/api/sitecore/Demo/EndVisit" class="btn btn-danger sidebar-opened" style="display: none" title="@DictionaryRepository.Get("/Website/Captions/EndVisit", "End the current visit and submit it to the Sitecore Experience Database")">
            <span class="glyphicon glyphicon-eye-close"></span>
            <span class="hover-only">End Visit</span>
          </a>
        </div>

        <div class="sidebar sidebar-fixed-right">
          @Html.Sitecore().Placeholder("page-sidebar")
        </div>
      </div>
    }
  </div>
  @RenderAssetsService.Current.RenderScript(ScriptLocation.Body)
</body>
</html>